<?xml version="1.0"?>
<robot name="turtle_pi">
  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://turtle_pi_description/urdf/meshes/turtle_pi_chassis.dae"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="1"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://turtle_pi_description/urdf/meshes/turtle_pi_chassis_collision.stl"/>
        <box size="0.22 0.10 0.05"/>
      </geometry>
    </collision>
  </link>

  <link name="left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://turtle_pi_description/urdf/meshes/turtle_pi_wheel.dae"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="1"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <collision>
      <origin xyz="-0.0125 0 0" rpy="0 1.57079632679 0"/>
      <geometry>
        <cylinder length="0.025" radius="0.035"/>
      </geometry>
    </collision>
  </link>
  
  <link name="right_wheel">
    <visual>
      <origin rpy="0 3.1415 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://turtle_pi_description/urdf/meshes/turtle_pi_wheel.dae"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="1"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <collision>
      <origin xyz="0.0125 0 0" rpy="0 -1.57079632679 0"/>
      <geometry>
        <cylinder length="0.025" radius="0.035"/>
      </geometry>
    </collision>
    
  </link>
  
  <joint name="left_wheel_joint" type="continuous">
    <axis xyz="1 0 0"/>
    <origin rpy="0 0 0" xyz="-0.050850 0.085775 -0.011100"/>
    <parent link="base_link"/>
    <child link="left_wheel"/>
  </joint>

  <joint name="right_wheel_joint" type="continuous">
    <axis xyz="1 0 0"/>
    <origin rpy="0 0 0" xyz="0.050850 0.085775 -0.011100"/>
    <parent link="base_link"/>
    <child link="right_wheel"/>
  </joint>
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/</robotNamespace>
    </plugin>
  </gazebo>
</robot>